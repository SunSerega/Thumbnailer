<UserControl x:Class="Dashboard.AllowedExt"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
			 xmlns:local="clr-namespace:Dashboard"
			 mc:Ignorable="d" 
			 d:DesignWidth="175">
	<DockPanel>

		<Button x:Name="b_delete" DockPanel.Dock="Right" Margin="3" >
			<Grid Width="15" Height="15" >
				<Line X1="3" Y1="3" X2="12" Y2="12" Stroke="Red" />
				<Line X1="3" Y1="12" X2="12" Y2="3" Stroke="Red" />
			</Grid>
		</Button>

		<Border BorderBrush="Black" BorderThickness="0,1,0,0">
			<TextBlock x:Name="tb_name" d:Text="mkv" FontSize="14" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="3,0,3,2" />
		</Border>
		
	</DockPanel>
</UserControl>
